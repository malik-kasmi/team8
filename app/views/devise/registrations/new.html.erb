<div id="square" class="padded-top form-wrapper">
        <h2 class="text-center">Inscription</h2>
    <div class="col-xs-12 col-sm-offset-4 col-sm-4">
<div class="form-wrapper padded-top">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
            <%= f.input :username, required: true, autofocus: true, label: "Nom d'utilisateur", input_html: { class: 'form-input' } %>
            <%= f.input :email, required: true, autofocus: true, input_html: { class: 'form-input' } %>
            <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), label: "Mot de passe", input_html: { class: 'form-input' } %>
            <%= f.input :password_confirmation, required: true, label: "Confirmation du mot de passe", input_html: { class: 'form-input' } %>
            <%= f.input :photo, as: :attachinary, label: "Ajoutez une photo Ã  votre profil" %>
            <%= f.button :submit, "Sign up", class:"button-input button-black" %>
            <%= render "devise/shared/links"%>
        <% end %>
            </div>
        </div>
  </div>


