<div class="background-sign-form">
  <h1 class="text-center padded-top">Connexion</h1>
  <div class="padded-top form-wrapper center">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true, input_html: { class: 'form-input' } %>
          <%= f.input :password, required: false, input_html: { class: 'form-input' }, label: "Mot de passe" %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="flexbox-center-container padded-light">
          <%= f.button :submit, "connexion", class:"button-orange" %>
        </div>
        <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>

