<body>
  <div id="square" class="padded">
    <div  id="leftSquare">
     </div>
    <div id="rightSquare">
      <h2 class="text-center padded-top">Creation de mon équipe</h2>
        <%= simple_form_for(@team) do |f| %>
        <%= f.error_notification %>
          <div id="container-input">
            <%= f.input :name, label: "Nom de l'équipe  🏐", required: true, autofocus: true, input_html: { class: 'form-input' } %>
            <%= f.input :city, label: "Ville", required: true, autofocus: true, input_html: { class: 'form-input' } %>
            <%= f.input :description, autofocus: true, input_html: { class: 'form-input' } %>
          </div>
          <div class="form-actions">
                <%= f.button :submit, "Je crée mon équipe", class:"button-input button-black" %>
          </div>
        <% end %>
    </div>
  </div>
</body>
