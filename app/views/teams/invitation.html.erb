<body>
  <div id="square" class="padded">
    <div  id="leftSquare"></div>
    <div id="rightSquare">
      <h2 class="text-center padded-top">Invite tes amis!</h2>
        <div id="container-input" style="padding: 2em margin-left:20px margin-top:100px">
          <%= link_to_send = request.protocol + request.host_with_port + "/join_team" + @team.id.to_s %>
        </div>
          <div id="shareBtn" class="btn btn-success clearfix">Share</div>
          <%= link_to "Continuer", teams_path ,class:"button-black" %>
    </div>
  </div>

<!-- INVITE FRIENDS ON FACEBOOK -->
          <script>
            window.fbAsyncInit = function() {
              FB.init({
                appId      : '930789570355639',
                xfbml      : true,
                version    : 'v2.8'
              });
              FB.AppEvents.logPageView();
            };

            (function(d, s, id){
               var js, fjs = d.getElementsByTagName(s)[0];
               if (d.getElementById(id)) {return;}
               js = d.createElement(s); js.id = id;
               js.src = "//connect.facebook.net/en_US/sdk.js";
               fjs.parentNode.insertBefore(js, fjs);
             }(document, 'script', 'facebook-jssdk'));
          </script>

          <script>
            document.getElementById('shareBtn').onclick = function() {
              FB.ui({
                method: 'send',
                // display: 'popup',
                link: 'google.com',
                });
            }
          </script>
</body>
