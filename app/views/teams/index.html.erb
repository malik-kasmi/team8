

<div class="banner-my-team " style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%;">
  <div class="banner-content">
    <h1 class="text-center padded-light"><strong>Mes équipes</strong></h1>
    <p>Défie une équipe en créant un match et améliore tes statistiques</p>
  </div>
</div>



<h1 class="text-center"><strong>Les équipes</strong></h1>

  <% if current_user.joined_teams.nil? && current_user.teams.nil? %>
  <p>you have no teams</p>
  <% else %>
  <% (current_user.joined_teams + current_user.teams).each do |team| %>
 <div class="card-padded ">
      <div class="container ">
        <div class="row">
          <div class="col-xs-12 col-sm-12">
            <div class="card badge-bordered">
              <h3 class="card-category"><%= team.name %></h3>
              <div class="card-description">
                <%= link_to "create game", new_team_game_path(team) %>
                  <ul>
                    <li><strong> Ville: </strong><%= team.city %></li>
                    <li><strong> Capitaine: </strong><%= User.find(team.captain_id).username %></li>
                    <li><strong> Description: </strong><%= team.description %></li>
                      <% team.games.each do |game| %>
                        <div>
                        <div>
                        <% if game.status == "pending" %>
                          <strong> Pending games' invitations: </strong>
                          <% if game.requester.id == team.id %>
                            <%= game.opponent.name %>
                          <% else %>
                            <%= game.requester.name %>
                          <%= link_to "Accept invitation", accept_game_path(game), method: :patch %>
                          <%= link_to "Reject invitation", reject_game_path(game), method: :patch %>
                          <% end %>
                        </div>
                        <div>
                        <% elsif game.status == "accept" %>
                          <strong> Games to be played:</strong>
                          <% if game.requester.id == team.id %>
                          <%= game.opponent.name %>
                          <% else %>
                          <%= game.requester.name %>
                          <% end %>
                        </div>
                        <% end %>
                        </div>
                      <% end %>
                  </ul>
              </div>
              <%= image_tag "logo.png", class:"card-user avatar avatar-large" %>
              <%= link_to "", team_path(team), class:"card-link" %>
              <!-- <a class="card-link" href="team_path(team)" ></a> -->
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  <% end %>


