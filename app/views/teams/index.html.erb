<h1 class="text-center"><strong> Les équipes</strong></h1>
<ul>
  <% @teams.each do |team| %>
 <div class="wrapper-grey padded">
      <div class="container">
        <div class="row">
          <div class="col-xs-12 col-sm-12">
            <div class="card" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2));">
              <div class="card-category"><%= team.city %></div>
              <div class="card-description">
                <h2><%= team.name%></h2>
              </div>
              <img class="card-user avatar avatar-large" src="logo.png">
              <a class="card-link" href="#" ></a>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
</ul>
