<div class="container">

  <div class="padded-light text-center">
    <h2> MY PROFILE </h2>
  </div>

    <div class = "container">
    <div class="row">
      <div class="col-xs-12 col-sm-offset-2 col-sm-8">
        <div class="badge-bordered padded-light rounded bg-card-user xxx">
          <div class="padded-light">


          <% if current_user.photo.nil? %>
              <%= image_tag "placeholder-md.png", class: "avatar-square-lg" %>
              <% else %>
              <%= cl_image_tag current_user.photo.path, class:"avatar-square-lg" %>
              <% end %>



          </div>
          <div class="padded-light">
            <p><strong>Username: </strong> <%= @profile.username %> </p>
            <p><strong>Age:</strong> <%= @profile.age %> </p>
            <p><strong>City:</strong> <%= @profile.city %> </p>
            <p><strong>Gender: </strong><%= @profile.gender %> </p>
            <p><strong>Description: </strong><%= @profile.description %> </p>
            <p><strong>Favorite position: </strong><%= @profile.favorite_position %> </p>
            <%= link_to "Edit profile", edit_profile_path, class:"btn btn-default"%>
          </div>
        </div>
      </div>
    </div>
  </div>


