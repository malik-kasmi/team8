<div class="background-profile full-height">
  <div class="padded-light text-center" style="margin-top:50px">
    <h1> MON PROFIL </h1>
  </div>
  <div class = "container">
    <div class="row">
      <div class="col-xs-12 col-sm-offset-2 col-sm-8">
        <div class="badge-bordered rounded bg-card-user" style="margin:20px">
        <div class="flexbox">
          <div class="padded-light">
            <% if current_user.photo.nil? %>
              <%= image_tag "placeholder-md.png", class: "avatar-square-lg" %>
            <% else %>
              <%= cl_image_tag current_user.photo.path, class:"avatar-square-lg" %>
            <% end %>
          </div>
          <div class="padded-light">
            <p><strong>Nom: </strong> <%= @profile.username %> </p>
            <p><strong>Age:</strong> <%= @profile.age %> </p>
            <p><strong>Ville:</strong> <%= @profile.city %> </p>
            <p><strong>Position favorite: </strong><%= @profile.favorite_position %> </p>
          </div>
        </div>
            <div class="text-center padded-light">
            <%= link_to "Editer mon profil", edit_profile_path, class:"button-orange"%>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>

