<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-offset-4 col-sm-4">
      <div class="padded-light bg-card-user registration-margin">
        <h2>Create your game</h2>
        <% @teams.each do |t| %>
        <div>
        <%= t.name %>
        <%= link_to "Send invitation", team_games_path(@current_team, {opponent_id: t.id}), method: :post %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
